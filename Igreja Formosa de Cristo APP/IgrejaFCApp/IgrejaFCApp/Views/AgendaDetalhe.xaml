<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="IgrejaFCApp.Views.AgendaDetalhe">
    
    <ListView x:Uid="listDetalhe"
		HasUnevenRows="true"
        SeparatorVisibility="None" 
		ItemsSource="{Binding agendaModel}" >
        <ListView.ItemTemplate>
            <DataTemplate>
                <ViewCell>
                    <Frame Padding="0">
                        <StackLayout Orientation="Vertical">
                            <Image Source="{Binding Banner}" />

                            <Label Text="{Binding Nome}"
								    Margin="20, 10, 20, 0"
								    FontAttributes="Bold" 
                                    FontSize="Medium"/>

                            <Label Text="{Binding Descricao}"
                                    Margin="20, 5, 20, 15"
                                    TextColor="Silver"
                                    FontSize="Medium"/>
                        </StackLayout>
                    </Frame>
                </ViewCell>
            </DataTemplate>
        </ListView.ItemTemplate>
    </ListView>
</ContentPage>